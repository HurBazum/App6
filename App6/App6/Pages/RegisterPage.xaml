<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="MyApp - Регистрация"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Title" />

            <Entry Placeholder="user@mail.com" PlaceholderColor="LightGray" />
            <Entry Placeholder="password" IsPassword="True" PlaceholderColor="Lightgray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>